<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    tools:context=".ui.fragments.main5.ProfileFragment">




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">







    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/clProfileSettings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageContainerMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/purple_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp">

            <ImageView
                android:id="@+id/ivProfileImgMain"
                android:layout_width="100dp"
                android:background="@drawable/ic_account"
                android:layout_height="100dp"
                android:contentDescription="@string/profile_image" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvNameMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cvImageContainerMain"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/login_to_save_your_progress"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="italic"
            />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvNameMain"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/tvNotificationSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:text="@string/login_to_save_your_progress"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvNotificationSettings"
            app:layout_constraintTop_toTopOf="@id/tvNotificationSettings"
            android:checked="true"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/switchNotification"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvReceiveNewsLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:text="@string/receive_email_updates"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchNewsletter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="@id/tvReceiveNewsLetter"
            app:layout_constraintTop_toTopOf="@id/tvReceiveNewsLetter"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <View
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvReceiveNewsLetter"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvSaveStoriesLocally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:text="@string/save_stories_locally"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLocalStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvSaveStoriesLocally"
            app:layout_constraintTop_toTopOf="@id/tvSaveStoriesLocally"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <View
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvSaveStoriesLocally"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/line4"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:text="@string/about_scared_app"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <ImageView
            android:id="@+id/BtngoToAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvAboutUs"
            app:layout_constraintTop_toTopOf="@id/tvAboutUs"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"/>

        <View
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvAboutUs"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvBecomeAWriter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/line5"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="start"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:text="@string/how_to_add_my_own_stories"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <ImageView
            android:id="@+id/BtnHowToAddStories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvBecomeAWriter"
            app:layout_constraintTop_toTopOf="@id/tvBecomeAWriter"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"/>

        <View
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvBecomeAWriter"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/line6"

            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@color/white"
            android:text="@string/privacy_policy"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="normal"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/tvPrivacyPolicy"/>




    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/toolbar_background"
        android:elevation="5dp"
        android:id="@+id/clProfileBarAudio"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/login_to_save_your_progress"
            android:fontFamily="@font/baloo"
            android:textSize="14sp"
            android:textStyle="italic"
            />

        <ImageView
            android:id="@+id/ivArrowDropDown"
            android:layout_width="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/ic_arrow_drop_down"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/profile_image" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:elevation="4dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/purple_700"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/ivProfileImg"
                android:layout_width="40dp"
                android:background="@drawable/ic_account"
                android:layout_height="40dp"
                android:contentDescription="@string/profile_image" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:layout_marginStart="48dp"
            android:layout_marginTop="220dp"
            android:layout_marginEnd="48dp"
            android:id="@+id/tvNotLoggedIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/login_to_save_the_progress_of_your_stories"
            android:fontFamily="@font/baloo"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:visibility="visible"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNotLoggedIn"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_login_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="120dp"
        android:text="@string/sign_in_up"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>